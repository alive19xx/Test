@model IEnumerable<Restaurant.Web.ViewModels.MenuItemViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        Menu Items
    </div>
    <table class="table table-striped">
        <tr><th>Name</th><th>Price</th></tr>
        @if (!Model.Any())
        {
            <tr><td colspan="3" class="text-center">No menu items to display</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name,"Details","Menu",new {id=item.Id},null)
                    </td>
                    <td>@item.Price CUR</td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
